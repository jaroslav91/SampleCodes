@page "{recipeId:int?}"
@model CookBook.Pages.Recipes.EditModel
@{
    ViewData["Title"] = "Edit";
}


<h2>Editing @Model.Recipe.Name</h2>

<form method="post">

    <input type="hidden" asp-for="Recipe.Id" />
    <div class="form-group">
        <label asp-for="Recipe.Name"></label>
        <input asp-for="Recipe.Name" class="form-control" />
        <span class="text-danger" asp-validation-for="Recipe.Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Recipe.Description"></label>
        <input asp-for="Recipe.Description" class="form-control" />
        <span class="text-danger" asp-validation-for="Recipe.Description"></span>
    </div>
    <div class="form-group">
        <label asp-for="Recipe.Cuisine"></label>
        <select class="form-control" asp-for="Recipe.Cuisine"
                asp-items="Model.Cuisines"></select>
        <span class="text-danger" asp-validation-for="Recipe.Cuisine"></span>
    </div>

  <div class="form-group">
        <label asp-for="Recipe.NumberOfServings"></label>
        <input asp-for="Recipe.NumberOfServings" class="form-control" />
        <span class="text-danger" asp-validation-for="Recipe.NumberOfServings"></span>
    </div>
    

    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts{
 <partial name="_ValidationScriptsPartial" />
}